<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/repositoryListFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.arturszymanski.githubrepositorysearchkotlin.view.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash" />

    <fragment
        android:id="@+id/repositoryListFragment"
        android:name="com.arturszymanski.githubrepositorysearchkotlin.view.reporitoryList.RepositoryListFragment"
        android:label="RepositoryListFragment"
        tools:layout="@layout/fragment_repository_list">
        <action
            android:id="@+id/action_repositoryListFragment_to_repositoryDetailsFragment"
            app:destination="@id/repositoryDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/repositoryDetailsFragment"
        android:name="com.arturszymanski.githubrepositorysearchkotlin.view.repositoryDetails.RepositoryDetailsFragment"
        android:label="RepositoryDetailsFragment"
        tools:layout="@layout/fragment_repository_details">
        <argument
            android:name="repository"
            app:argType="com.arturszymanski.domain.entity.Repository"/>
    </fragment>

</navigation>